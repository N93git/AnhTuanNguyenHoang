<div class="page-contact py-40">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1 class="mb-30 lienheh1">
                   Liên hệ
                </h1>

            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="lienhebox">
                    <div class="lienhetitle">
                        CÔNG TY CỔ PHẦN TẬP ĐOÀN NGUYỄN HOÀNG CENTURY

                    </div>
                    <div class="lienhe_span">
                        <span class="lienhespan_left"><i class="fa fa-map-marker"></i></span> <span class="lienhespan_right">@ViewBag.Info.Address</span>
                    </div>
                    <div class="lienhe_span">
                        <span class="lienhespan_left"><i class="fa fa-phone"></i></span> <span class="lienhespan_right">@ViewBag.Info.Hotline</span>
                    </div>
                    <div class="lienhe_span">
                        <span class="lienhespan_left"><i class="fa fa-envelope"></i></span> <span class="lienhespan_right">@ViewBag.Info.Email</span>
                    </div>
                    <div class="lienhe_span">
                        <span class="lienhespan_left"><i class="fa fa-globe"></i></span> <span class="lienhespan_right">nguyenhoangcentury.vn</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
               
                <form method="POST" action="" class="block-form form-lien-he">
                    <div class="form-group">
                        @if (ViewBag.lang == "vn")
                        {
                            <input type="text" placeholder="Họ và tên (*)" name="name" class="form-control">
                        }
                        @if (ViewBag.lang == "en")
                        {
                            <input type="text" placeholder="Name (*)" name="name" class="form-control">
                        }

                        @if (ViewBag.lang == "fr")
                        {
                            <input type="text" placeholder="Nom (*)" name="name" class="form-control">
                        }

                    </div>
                    <div class="form-group">
                        @if (ViewBag.lang == "vn")
                        {
                            <input type="number" placeholder="Số điện thoại (*)" name="phone" class="form-control">
                        }
                        @if (ViewBag.lang == "en")
                        {
                            <input type="number" placeholder="Phone number (*)" name="phone" class="form-control">
                        }

                        @if (ViewBag.lang == "fr")
                        {
                            <input type="number" placeholder="Numéro de téléphone (*)" name="phone" class="form-control">
                        }

                    </div>
                    <div class="form-group hidden">
                        @if (ViewBag.lang == "vn")
                        {
                            <input type="text" placeholder="Địa chỉ" name="address" class="form-control">
                        }
                        @if (ViewBag.lang == "en")
                        {
                            <input type="text" placeholder="Address" name="address" class="form-control">
                        }

                        @if (ViewBag.lang == "fr")
                        {
                            <input type="text" placeholder="Adresse" name="address" class="form-control">
                        }

                    </div>
                    <div class="form-group">
                        @if (ViewBag.lang == "vn")
                        {
                            <input type="email" placeholder="Email" name="email" class="form-control">
                        }
                        @if (ViewBag.lang == "en")
                        {
                            <input type="email" placeholder="Email" name="email" class="form-control">
                        }

                        @if (ViewBag.lang == "fr")
                        {
                            <input type="email" placeholder="E-mail" name="email" class="form-control">
                        }

                    </div>
                    <div class="form-group">
                        @if (ViewBag.lang == "vn")
                        {
                            <textarea rows="7" placeholder="Ghi chú" name="content" class="form-control"></textarea>

                        }
                        @if (ViewBag.lang == "en")
                        {
                            <textarea rows="7" placeholder="Note" name="content" class="form-control"></textarea>

                        }

                        @if (ViewBag.lang == "fr")
                        {
                            <textarea rows="5" placeholder="Noter" name="content" class="form-control"></textarea>

                        }
                    </div>
                    @if (ViewBag.lang == "vn")
                    {
                        <div class="form-group text-right"><button type="submit" class="btncontact">Gửi  <img src="~/assets/Resource/icon-lien-he.png" /></button></div>

                    }
                    @if (ViewBag.lang == "en")
                    {
                        <div class="form-group text-right"><button type="submit" class="btncontact ">
    Send
    <img src="~/assets/Resource/icon-lien-he.png" />
</button></div>

                    }

                    @if (ViewBag.lang == "fr")
                    {
                        <div class="form-group text-right"><button type="submit" class="btncontact">Envoyer</button></div>

                    }

                </form>
            </div>
        </div>
        <div class="row" style="margin-top:30px;">
            <div class="col-sm-12"> 
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3920.009793899533!2d106.6984549142867!3d10.7337276629167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317525770c40d051%3A0xa1eb042141f251a6!2zTmjDoCB0aOG6p3UgQ8ahIMSQaeG7h24gTOG6oW5oIC0gWMOieSBk4buxbmcgTmd1eeG7hW4gSG_DoG5nIENlbnR1cnkgTkhDIEdyb3Vw!5e0!3m2!1sen!2sus!4v1651130539359!5m2!1sen!2sus" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

            </div>
        </div>
    </div>
</div>
