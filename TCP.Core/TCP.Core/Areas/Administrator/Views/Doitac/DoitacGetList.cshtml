<script>
    getList();
    function getList() {
        var param = null;
        $.ajax({
            url: '/Administrator/Doitac/SlideshowGetData',
            data: param,
            dataType: 'text',
            type: 'POST',
            cache: false,
            success: function (result) {
                $("#bodydata").empty().html(result)
            }
        });
    }
    function goto() {
        window.location.href = "/Administrator/Doitac/DoitacInsertList";
    }
</script>