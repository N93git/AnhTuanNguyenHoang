                                                    <input name="txtMonth9" id="txtMonth9" placeholder="" type="text" class="form-control" value="@item.Month9">
                                                }

                                            }
                                            else
                                            {
                                                <input name="txtMonth9" id="txtMonth9" placeholder="" type="text" class="form-control" value="0">
                                            }

                                        </div>
                                        <div class="position-relative form-group">
                                            <label for="exampleEmail" class="">6 Tháng</label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <input name="txtMonth6" id="txtMonth6" placeholder="" type="text" class="form-control" value="@item.Month6">
