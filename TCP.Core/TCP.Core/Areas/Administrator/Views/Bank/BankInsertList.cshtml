                                                <input type="hidden" id="hdFileName" />
                                                <div id="dd" onchange="ChangeDD()">

                                                </div>
                                            }

                                            <small class="form-text text-muted">
                                                Vui lòng chọn hình ảnh có kích thước <strong>600x600px</strong>
                                            </small>
                                        </div>

                                        <div class="position-relative form-group">
                                            <label for="exampleEmail" class="">12 Tháng </label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <input name="txtMonth12" id="txtMonth12" placeholder="" type="text" class="form-control" value="@item.Month12">
                                                }

                                            }
                                            else
                                            {
                                                <input name="txtMonth12" id="txtMonth12" placeholder="" type="text" class="form-control" value="0">
                                            }

                                        </div>
                                        <div class="position-relative form-group">
