<script>
    function SaveData() {
        var parentselect = $("#slPoductCategory option:selected").attr("data-parent") + "," + $("#slPoductCategory").val();

        var param = {
            "NewsId": $("#txtID").val(),
            "NewsTitle": $("#txtName").val(),
            "NewsTitle1": $("#txtName1").val(),
            "NewsTitle2": $("#txtName2").val(),
            "NewsImage": $("#hdFileName").val(),
            "NewsDesc": $("#txtMotaVN").val(),
            "NewsDesc1": $("#txtMotaEN").val(),
            "NewsDesc2": $("#txtMotaFR").val(),
            "NewsContents": CKEDITOR.instances.editor1.getData(),
            "NewsContents1": CKEDITOR.instances.editor3.getData(),
            "NewsContents2": CKEDITOR.instances.editor4.getData(),
            "ParentID": parentselect,

            "Title": $("#txttitle").val(),
            "Url": $("#txtseoURL").val(),
            "MetaDescription": $("#txtMetaDescription").val(),
            "MetaKeywords": $("#txtMetaKeywords").val(),
            "multiImage": savedd
        }
        $.post("/Administrator/News/UpdateNews", { "data": "" + JSON.stringify(param) + "" }, function (result) {
            window.location.href = "/Administrator/News/NewsGetList";

        });
    }
</script>
