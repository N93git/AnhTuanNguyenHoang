                </div>*@
           
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <h5 class="card-title">Nội dung</h5>
                                    <div class="">
                                        <!--Tiêu đề-->
                                        <div class="position-relative form-group">
                                            <label for="exampleEmail" class="">Tiêu đề <span style="color:red">(*)</span></label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <input name="txtName" id="txtName" placeholder="" type="text" class="form-control box0" value="@item.ProductCategoryTitle">
                                                    <input name="txtName1 " id="txtName1" placeholder="" type="text" class="form-control box1" value="@item.ProductCategoryTitle1">
                                                    <input name="txtName2 " id="txtName2" placeholder="" type="text" class="form-control box2" value="@item.ProductCategoryTitle2">
                                                    <input type="hidden" id="txtID" name="txtID" value="@item.ProductCategoryId" />
                                                }

                                            }
                                            else
                                            {
                                                <input name="txtName " id="txtName" placeholder="" type="text" class="form-control box0">
                                                <input name="txtName1 " id="txtName1" placeholder="" type="text" class="form-control box1">
                                                <input name="txtName2 " id="txtName2" placeholder="" type="text" class="form-control box2">
                                                <input type="hidden" id="txtID" name="txtID" value="0" />
                                            }

                                        </div>
                                        <!--Hình ảnh-->
                                        <div class="position-relative form-group">
                                            <label for="exampleFile" class="">Hình ảnh</label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <input name="file" id="fu" type="file" class="form-control-file" multiple>
                                                    <input type="hidden" id="hdFileName" value="@item.ProductCategoryImage" />
                                                    <div id="dd" onchange="ChangeDD()">
                                                        @*<img src="~/Upload/ProductCategories/@item.ProductCategoryImage" />
                                                        <a onclick="img_click('@item.ProductImage','Products','')">
                                                            x

                                                        </a>*@

                                                        @if (item.ProductCategoryImage != "")
                                                        {
                                                            <div class="myimage">
                                                                <img src="~/Upload/ProductCategories/@item.ProductCategoryImage" class="img-fluid" />
                                                                <a onclick="img_click('@item.ProductCategoryImage','ProductCategories','')">
                                                                    x

                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <input name="file" id="fu" type="file" class="form-control-file" multiple>
                                                <input type="hidden" id="hdFileName" />
                                                <div id="dd" onchange="ChangeDD()">

                                                </div>
                                            }

                                            <small class="form-text text-muted">
                                                Vui lòng chọn hình ảnh có kích thước <strong>600x600px</strong>
                                            </small>
                                        </div>
                                        <!--Danh mục-->
                                        <div class="position-relative form-group">
                                            <label for="exampleSelect" class="">Danh mục</label>
                                            <select name="slPoductCategory" id="slPoductCategory" class="form-control">
                                                <option value="0">--Root--</option>
                                                @if (ViewBag.ListProCate != null)
                                                {
                                                    foreach (var item in ViewBag.ListProCate)
                                                    {
                                                        <option value="@item.ProductCategoryId">@item.ProductCategoryTitle</option>
                                                        @Html.Action("ProductCategoryselect", "ProductCategory", new { parentId = item.ProductCategoryId, exexcep = ViewBag.Excep })
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <!--Mô tả ngắn-->
                                        <div class="position-relative form-group">

                                            <label for="examplePassword" class="">Mô tả ngắn</label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <textarea id="editor2" name="editor2" class="form-control">@item.ProductCategoryDesc</textarea>
                                                }
                                            }
                                            else
                                            {
                                                <textarea id="editor2" name="editor2" class="form-control"></textarea>
                                            }

                                        </div>
                                        <!--Nội dung-->
                                        <div class="position-relative form-group d-none">
                                            <label for="examplePassword" class="">Nội dung</label>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <textarea id="editor1" name="editor1" class="form-control">@item.ProductCategoryContents</textarea>
                                                }
                                            }
                                            else
                                            {
                                                <textarea id="editor1" name="editor1" class="form-control"></textarea>
                                            }
                                        </div>

                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @*<div class="inputWrapper">
                    <input type="file" id="fu" multiple>
                </div>Tiêu đề (*)
                <div id="dd">

                </div>*@
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <h5 class="card-title">Tối ưu seo</h5>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            @Html.Action("GetSeoBox", "Ajax", new { relatedId = item.ProductCategoryId,templateid=1 })
                                        }
                                    }
                                    else
                                    {
                                        @Html.Action("GetSeoBox", "Ajax", new { relatedId = 0, templateid = 0 })
                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="btn_Save_Fixed">
                @*<button class="mt-1 btn btn-primary" onclick="SaveData()">Submit</button>*@
            </div>
        </div>
    </div>
</div>



<script>
   
    function SaveData() {
        var param = {
            "ProductCategoryId": $("#txtID").val(),
            "ProductCategoryTitle": $("#txtName").val(),
            "ProductCategoryTitle1": $("#txtName1").val(),
            "ProductCategoryTitle2": $("#txtName2").val(),
            "ProductCategoryImage": $("#hdFileName").val(),
            "ProductCategoryDesc": CKEDITOR.instances.editor2.getData(),
            "ProductCategoryContents": CKEDITOR.instances.editor1.getData(),
            "ParentID": $("#slPoductCategory").val(),

            "Title": $("#txttitle").val(),
            "Url": $("#txtseoURL").val(),
            "MetaDescription": $("#txtMetaDescription").val(),
            "MetaKeywords": $("#txtMetaKeywords").val(),
        }
        $.post("/Administrator/ProductCategory/UpdateProductCategories", { "data": "" + JSON.stringify(param) + "" }, function (result) {
            window.location.href = "/Administrator/ProductCategory/getlist";
        });
    }
</script>
