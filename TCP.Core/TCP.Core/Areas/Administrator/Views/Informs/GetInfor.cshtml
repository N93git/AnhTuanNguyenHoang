<script>

    function SaveData() {
        var param = {
            "Name": $("#Name").val(),
            "Address": $("#Address").val(),
            "Hotline": $("#Hotline").val(),
            "Email": $("#Email").val(),
            "OpenTimes": $("#OpenTimes").val(),
            "Facebook": $("#Facebook").val(),
            "Youtube": $("#Youtube").val(),
            "Description": CKEDITOR.instances.editor2.getData(),
            "Contents": CKEDITOR.instances.editor1.getData(),

        }
        $.post("/Administrator/Informs/inforUpdates", { "data": "" + JSON.stringify(param) + "" }, function (result) {
            window.location.href = "/Administrator/Informs/GetInfor";
        });
    }
</script>
